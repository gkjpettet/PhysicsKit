#tag Class
Protected Class BasicCollisionItemTests
Inherits TestGroup
	#tag Event
		Function UnhandledException(err As RuntimeException, methodName As Text) As Boolean
		  #pragma unused err
		  
		  Const kMethodName As Text = "UnhandledException"
		  
		  If methodName.Length >= kMethodName.Length And methodName.Left(kMethodName.Length) = kMethodName Then
		    Assert.Pass("Exception was handled")
		    Return True
		  End If
		End Function
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub CopyTest()
		  ///
		  ' Tests the copy method.
		  ///
		  
		  Var body As TestCollisionBody = New TestCollisionBody
		  Var fixture As PKFixture = New PKFixture(PKGeometry.CreateCircle(0.5))
		  Var item As PKBasicCollisionItem = New PKBasicCollisionItem(body, fixture)
		  
		  Var copy As PKBasicCollisionItem = item.Copy
		  
		  Assert.IsTrue(item.GetBody = copy.GetBody)
		  Assert.IsTrue(item.GetFixture = copy.GetFixture)
		  Assert.AreEqual(item.HashCode, copy.HashCode)
		  Assert.IsFalse(item = copy)
		  Assert.IsTrue(item.Equals(copy))
		  
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub CreateTest()
		  ///
		  ' Tests the create method.
		  ///
		  
		  Var body As TestCollisionBody = New TestCollisionBody
		  Var fixture As PkFixture = New PKFixture(PKGeometry.CreateCircle(0.5))
		  Var item As PKBasicCollisionItem = New PKBasicCollisionItem(body, fixture)
		  
		  Assert.IsTrue(body = item.GetBody)
		  Assert.IsTrue(fixture = item.GetFixture)
		  
		  Assert.IsFalse(0 = item.HashCode)
		  
		End Sub
	#tag EndMethod


